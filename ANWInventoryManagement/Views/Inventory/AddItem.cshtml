@model ANWInventoryManagement.ViewModels.InventoryViewModel

<h1>Add Item</h1>
<hr />
<form asp-controller="Inventory" asp-action="AddItem" method="post">

    <div class="form-group">
        <label asp-for="DeviceName"></label>
        <input class="form-control" asp-for="DeviceName" />
        <span style="color:red" asp-validation-for="DeviceName"></span>
    </div>
    <div class="form-group">
        <label asp-for="BarcodeID"></label>
        <input class="form-control" asp-for="BarcodeID" />
        <span style="color:red" asp-validation-for="BarcodeID"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select class="form-control" asp-for="CategoryID" asp-items="Model.AddItemCategories"></select>
        <span style="color:red" asp-validation-for="CategoryID"></span>
    </div>
    <div class="form-group">
        <label asp-for="PurchaseDate"></label>
        <input  class="form-control" type="date" asp-for="PurchaseDate" value="@DateTime.Today" />
    </div>

    <input class="btn btn-secondary btn-sm" type="submit" value="Add Item" />


</form>