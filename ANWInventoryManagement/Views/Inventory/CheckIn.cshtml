@model  ANWInventoryManagement.ViewModels.InventoryViewModel
<h1> Check In </h1>
<hr />
<form asp-controller="Inventory" asp-action="CheckIn" asp-method="post">
    <div class="form-group">
        <label asp-for="CheckInDeviceBarcode"></label>
        <input class="form-control" asp-for="CheckInDeviceBarcode" />
        <span style="color:red" asp-validation-for="CheckInDeviceBarcode"></span>
    </div>
    <div class="form-group">
        <label asp-for="CheckInUser"></label>
        <input class="form-control" value="" asp-for="CheckInUser" />
        <span style="color:red" asp-validation-for="CheckInUser"></span>
    </div>
    <div class="form-group">
        <label asp-for="CheckInComment"></label>
        <input class="form-control"  asp-for="CheckInComment" />
        <span style="color:red" asp-validation-for="CheckInComment"></span>
    </div>
    <div class="form-group">
        <label asp-for="CheckInForRepair"></label>
        <input type="radio" name="CheckInForRepair" value="Yes">Yes </input>
        <input type="radio" name="CheckInForRepair" value="No"> No </input>
        <span style="color:red" asp-validation-for="CheckInForRepair"></span>
    </div>
    <input type="submit" value="Check In" />

</form>

